                <th>Email</th>
                <th>Phone</th>
                <th>Contrat</th>
                <th>RegisterAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for enseignant in enseignants %}
            <tr>
                <td>{{ enseignant.id }}</td>
                <td>{{ enseignant.cin }}</td>
                <td>{{ enseignant.firstname }}</td>
                <td>{{ enseignant.lastname }}</td>
                <td>{{ enseignant.diplome }}</td>
                <td>{{ enseignant.email }}</td>
                <td>{{ enseignant.phone }}</td>
                <td>{{ enseignant.contrat }}</td>
                 <td>{{ enseignant.registerAt ? enseignant.registerAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('enseignant_show', {'id': enseignant.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('enseignant_edit', {'id': enseignant.id}) }}"><i class="far fa-edit" style="margin-left: 20px;"></i></a>
                </td>
            </tr>
