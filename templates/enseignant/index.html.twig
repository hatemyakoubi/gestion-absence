{% extends 'template.html.twig' %}

{% block title %}Enseignant index{% endblock %}

{% block body %}
    <h1>Liste des enseignants </h1>

    <table class="table" data-toggle="table"  data-search="true" data-show-columns="true" data-pagination="true">
        <thead>
            <tr>
                <th data-sortable="true" data-field="cin">Id</th>
                <th>Cin</th>
                  <th data-sortable="true" data-field="firstname">Firstname</th>
                <th data-sortable="true" data-field="lastname">Lastname</th>   
